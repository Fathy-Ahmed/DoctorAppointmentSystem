@model List<AdminUsersVM>
@{
	Layout = "_AdminLayout";
	ViewData["Title"] = "Admin";
}

<h3 style="text-align:center;">Users</h3>
<hr />
<main class="content">
	<div class="container-fluid p-0">
		<h1 class="h3 mb-3"><strong>Users</strong></h1>
		
		<div class="row">
			<div class="col-12 col-md-12 col-xxl-6 d-flex order-3 order-xxl-2">
				<div class="card flex-fill">
					<div class="card-header">
						@* <h5 class="card-title mb-0">Latest Projects</h5> *@
					</div>
					<table class="table table-hover my-0">
						<thead>
							<tr>
								<th>Name</th>
								<th>Age</th>
								<th>Gender</th>
								<th>User Name</th>
								<th>Email</th>
								<th>PhoneNumber</th>								
								@* <th class="d-none d-md-table-cell">Actions</th> *@
							</tr>
						</thead>
						<tbody>
							@foreach (var item in Model)
							{
								<tr>
									<td>@item.Name</td>
									<td>@item.Age</td>
									<td>@item.Gender</td>
									<td class="d-none d-xl-table-cell">@item.UserName</td>
									<td class="d-none d-xl-table-cell">@item.Email</td>
									<td class="d-none d-md-table-cell">@item.PhoneNumber</td>
									@* <td><span class="badge bg-success">Done</span></td> *@
								</tr>
							}						
						</tbody>
					</table>
				</div>
			</div>
		</div>
	</div>
</main>
